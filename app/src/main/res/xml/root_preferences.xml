<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="General Settings">
        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Dark Mode"
            app:summary="Enable dark theme for the app" />

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Notifications"
            app:summary="Enable notifications for low stock and updates" />

        <EditTextPreference
            app:key="business_name"
            app:title="Business Name"
            app:summary="Set your business name"
            app:defaultValue="Pet Store" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Data Management">
        <Preference
            app:key="export_data"
            app:title="Export Data"
            app:summary="Export your pet data to a file" />

        <Preference
            app:key="import_data"
            app:title="Import Data"
            app:summary="Import pet data from a file" />

        <Preference
            app:key="clear_data"
            app:title="Clear All Data"
            app:summary="Delete all stored data (cannot be undone)" />
    </PreferenceCategory>

    <PreferenceCategory app:title="About">
        <Preference
            app:key="version"
            app:title="Version"
            app:summary="1.0.0" />

        <Preference
            app:key="privacy_policy"
            app:title="Privacy Policy" />

        <Preference
            app:key="terms_conditions"
            app:title="Terms &amp; Conditions" />
    </PreferenceCategory>
</PreferenceScreen>
